  <script>
    let currentIndex = 0;
    const slides = document.getElementById('slides');
    const slidesCount = slides.querySelectorAll('img').length;

    function updateSlider() {
      slides.style.transform = 'translateX(' + (-currentIndex * 100) + '%)';
    }

    function moveSlide(n) {
      currentIndex = (currentIndex + n + slidesCount) % slidesCount;
      updateSlider();
    }

    document.getElementById('prevBtn').addEventListener('click', () => moveSlide(-1));
    document.getElementById('nextBtn').addEventListener('click', () => moveSlide(1));

